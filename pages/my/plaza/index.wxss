/* pages/my/plaza/index.wxss */
.main{
  width: 750rpx;
  min-height: 1000rpx;
}
.main .top{
  width: 750rpx;
  height: 400rpx;
  background: url(https://szdbi.oss-cn-shenzhen.aliyuncs.com/xcxkaipin/card.png) no-repeat;
  background-size: 100%;
}
.main .top .btn{
  display: flex;
}
.main .top .btn button{
  width: 240rpx;
  height: 70rpx;
  font-size: 32rpx;
  color: #653f01;
  border-radius: 32rpx;
  margin-top: 170rpx;
  box-shadow: 10rpx 10rpx 10rpx #bc875d;
}
.main .tab {
  display: flex;
  justify-content: center;
  width: 750rpx;
  height: 100rpx;
  border-bottom:1rpx solid #ccc;  

}
.main .tab view{
  width: 248rpx;
  height: 70rpx;
  font-size: 30rpx; 
  display: flex;
  justify-content: center;
  background-color: #fafafa;
  padding-top: 30rpx; 
}
.main .tab .n{
    border-right:1rpx solid #ccc;
}
.main  .content{
  width: 610rpx;
  height: 200rpx;
  background: url(https://szdbi.oss-cn-shenzhen.aliyuncs.com/xcxkaipin/card_bg.png) no-repeat; 
  background-size: 100%;
  padding: 30rpx 30rpx 0 30rpx;
  border-radius: 10rpx;
  /* box-shadow: 0 0 10rpx #f5f5f5; */
  display: flex;
  position: relative;
  margin: 0 auto;
  margin-top: 40rpx;
}
.main  .content .img{
  width: 145rpx;
  height: 145rpx;
  border-radius: 90rpx;
  box-shadow: 0 0 10rpx #f5f5f5;
}
.main  .content .img image{
  width: 145rpx;
  height: 145rpx;
  border-radius: 90rpx;
}
.main  .content .text{
  margin-left: 20rpx;
  line-height: 50rpx;
}
.main  .content .text .t1{
  font-size: 32rpx;
  color: #333;
}
.main  .content .text .t2{
  font-size: 28rpx;
  color: #333;
}
.main  .content .text .t3{
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
}
.main  .content .text .t3 :nth-child(2){
  font-size: 28rpx;
  color: #bc875d;
  position: absolute;
  right: 20rpx;
}