.title {
  margin: 60rpx 0 30rpx;
  font-size: 40rpx;
  text-align: center;
  font-weight: bold;
  color: #383A3D;
}

.product-list {
  background: #f5f5f5;
  /* min-height: 1000rpx; */
}

.product-list .product-item {
  position: relative;
  width: 100vw;
  /* border-bottom: 2rpx solid #E9E9E9; */
  box-sizing: border-box;
  background: #fff;
  z-index: 999;
  margin-top: 20rpx;
  
}

.slide-product-list .slide-product-item {
  position: relative;
  width: 100vw;
  /* border-bottom: 2rpx solid #E9E9E9; */
  box-sizing: border-box;
  background: #fff;
  z-index: 999;
}

.product-list .product-item movable-area {
  height: 350rpx;
  width: calc(100vw - 120rpx);
}

.product-list .product-item movable-view {
  height: 350rpx;
  width: 100vw;
  background: #fff;
  z-index: 999;
}

.product-list .product-item .delete-btn {
  width: 150rpx;
  height: 350rpx;
  background: #f96363;
  color:#fff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 0;
  top: 0;
}

.product-list .product-item-wrap {
  width: 100%;
  height: 350rpx;
  background: #fff;
  line-height: 40rpx;
  /* margin-top: 30rpx; */
  position: relative; 
}

.product-list .product-item-wrap .shancont .content {
  flex: 1;
  overflow: hidden;
  padding: 40rpx;
  display: flex;
  /* justify-content: center; */
}

.product-list .product-item-wrap .img image{
  width: 125rpx;
  height: 125rpx;
}

.product-list .product-item-wrap .text {
  margin-left: 20rpx; 
  display: flex;
  flex-direction: column;
}

.product-list .product-item-wrap .text .t1{
  font-size: 32rpx;
  color: #333;
}

.product-list .product-item-wrap .text .t2{
  font-size: 28rpx;
  color: #43b1f4;
}

.product-list .product-item-wrap .text .t3{
  font-size: 28rpx;
  color: #666;
}

.product-list .product-item-wrap .date {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666;
}

.product-list .product-item-wrap .date i{
  width: 81rpx;
  height: 31rpx;
  border:1rpx #43b1f4 solid;
  font-size: 22rpx;
  border-radius: 90rpx;
  color: #43b1f4;
  margin-left: 2%;
}

.product-list .product-item-wrap .text {
  display: flex;
  font-size: 24rpx;
  color: #666;
}

.product-list .product-item-wrap .text .ct{
  margin-left: 35rpx;
}

.product-list .product-item-wrap .bt{
  display: flex;
  position: absolute;
  left: 390rpx;
  text-align: center;
}

.product-list .product-item-wrap .bt view{
  width: 140rpx;
  height: 42rpx;
  border-radius: 25rpx;
  font-size: 26rpx; 
  padding-top: 10rpx;
}

.product-list .product-item-wrap .btn1 view{
  color: #43b1f4;
  background: #fff;
  border: 1rpx solid #43b1f4; 
}

.product-list .product-item-wrap .btn2 view{
  color: #fff;
  background: #43b1f4;
  border: 1rpx solid #fff;
  margin-left: 20rpx;
}

.product-list .product-item-wrap .product-movable-item-amount {
  flex: 0 0 auto;
  padding-right: 80rpx;
  position: relative;
}

.product-list .product-item-wrap .product-movable-item-amount .amount {
  width: 120rpx;
  font-size: 28rpx;
  color: #383A3D;
  line-height: 40rpx;
}

.product-list .product-item-wrap .product-movable-item-amount .unit {
  position: absolute;
  top: 0;
  right: 30rpx;
  font-size: 28rpx;
  color: #969AA3;
  line-height: 40rpx;
}

.no-main{
  width: 750rpx;
  min-height: 1000rpx;
}
.no-main .top{
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.no-main .top image{
  width: 85%;
}
.no-main .top :nth-child(2){
  font-size: 30rpx;
  color: #999;
  text-align: center;
  margin: 40rpx;
}
.no-main .btn{
  width: 100%;
  position: fixed;
  bottom: 30%;
  display: flex;
  justify-content: center; 
}
.no-main .btn button{
  width: 85%;
  font-size: 36rpx;
  background-color: #43b1f4;
  color: #fff;  
}