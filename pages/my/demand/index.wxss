/* pages/my/Demand/index.wxss */
.title {
  margin: 60rpx 0 30rpx;
  font-size: 40rpx;
  text-align: center;
  font-weight: bold;
  color: #383A3D;
}

.product-list {
  background: #f5f5f5;
  /* min-height: 1000rpx; */
}

.product-list .product-item {
  position: relative;
  width: 100vw;
  /* border-bottom: 2rpx solid #E9E9E9; */
  box-sizing: border-box;
  background: #fff;
  z-index: 999;
  margin-top: 20rpx;
  
}

.slide-product-list .slide-product-item {
  position: relative;
  width: 100vw;
  /* border-bottom: 2rpx solid #E9E9E9; */
  box-sizing: border-box;
  background: #fff;
  z-index: 999;
}

.product-list .product-item movable-area {
  height: 222rpx;
  width: calc(100vw - 120rpx);
}

.product-list .product-item movable-view {
  height: 222rpx;
  width: 100vw;
  background: #fff;
  z-index: 999;
}

.product-list .product-item .delete-btn {
  width: 150rpx;
  height: 220rpx;
  background-color: #f96363;
  color: #fff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 0;
  top:0;
}

.product-list .product-item-wrap {
  width: 100%;
  height: 222rpx;
  background: #fff;
  line-height: 60rpx;
  /* margin-top: 30rpx; */
  position: relative; 
}

.product-list .product-item-wrap .content {
  flex: 1;
  overflow: hidden;
  padding: 40rpx;
}

.product-list .product-item-wrap .names {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333;
  line-height: 60rpx;
  margin-right: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.product-list .product-item-wrap .date {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666;
}

.product-list .product-item-wrap .date .blue{
  width: 81rpx;
  height: 31rpx;
  border:1rpx #43b1f4 solid;
  font-size: 22rpx;
  border-radius: 90rpx;
  color: #43b1f4;
  margin-left: 2%;
}

.product-list .product-item-wrap .date .red{
  width: 81rpx;
  height: 31rpx;
  border:1rpx #f4435b solid;
  font-size: 22rpx;
  border-radius: 90rpx;
  color: #f4435b;
  margin-left: 2%;
}

.product-list .product-item-wrap .text {
  display: flex;
  font-size: 24rpx;
  color: #666;
}

.product-list .product-item-wrap .text .ct{
  margin-left: 35rpx;
}

.product-list .product-item-wrap .product-movable-item-amount {
  flex: 0 0 auto;
  padding-right: 80rpx;
  position: relative;
}

.product-list .product-item-wrap .product-movable-item-amount .amount {
  width: 120rpx;
  font-size: 28rpx;
  color: #383A3D;
  line-height: 60rpx;
}

.product-list .product-item-wrap .product-movable-item-amount .unit {
  position: absolute;
  top: 0;
  right: 30rpx;
  font-size: 28rpx;
  color: #969AA3;
  line-height: 60rpx;
}
 .foot {
  width: 750rpx;
  height: 222rpx;
  margin: 80rpx;
}
 .foot .fa view{
  width: 190rpx;
  height: 50rpx;
  border-radius: 25rpx;
  background: #fff;
  text-align: center;
  box-shadow: 0 0 10rpx #e4e1df;
  font-size: 25rpx;
  color: #43b1f4;
  position: absolute;
  right: 40rpx;
}


.no-main{
  width: 750rpx;
  min-height: 1000rpx;
}
.no-main .top{
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.no-main .top image{
  width: 85%;
}
.no-main .top :nth-child(2){
  font-size: 30rpx;
  color: #999;
  text-align: center;
  margin: 40rpx;
}
.no-main .btn{
  width: 100%;
  position: fixed;
  bottom: 30%;
  display: flex;
  justify-content: center; 
}
.no-main .btn button{
  width: 85%;
  font-size: 36rpx;
  background-color: #43b1f4;
  color: #fff;  
}