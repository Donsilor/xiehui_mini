/* pages/my/carte/my_attention/index.wxss */
.main{
  width: 750rpx;
  min-height: 1000rpx;
}
.main .new{
  padding: 40rpx;
}
.main .new .n1{
  font-size: 34rpx;
  color: #333;
}
.main .new .newcontent{
  width: 610rpx;
  height: 200rpx;
  background: url(https://szdbi.oss-cn-shenzhen.aliyuncs.com/xcxkaipin/card_bg.png) no-repeat; 
  background-size: 100%;
  padding: 30rpx 30rpx 0 30rpx;
  border-radius: 10rpx;
  /* box-shadow: 0 0 10rpx #f5f5f5; */
  margin-top: 20rpx;
  display: flex;
  position: relative;
}
.main .new .newcontent .img{
  width: 145rpx;
  height: 145rpx;
  border-radius: 90rpx;
  box-shadow: 0 0 10rpx #f5f5f5;
}
.main .new .newcontent .img image{
  width: 145rpx;
  height: 145rpx;
  border-radius: 90rpx;
}
.main .new .newcontent .text{
  margin-left: 20rpx;
  line-height: 50rpx;
}
.main .new .newcontent .text .t1{
  font-size: 30rpx;
  color: #333;
}
.main .new .newcontent .text .t2{
  font-size: 26rpx;
  color: #333;
}
.main .new .newcontent .text .t3{
  font-size: 26rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
}
.main .new .newcontent .text .t3 :nth-child(2){
  font-size: 26rpx;
  color: #bc875d;
  position: absolute;
  right: 20rpx;
}

.no-main{
 width: 750rpx;
 min-height: 1000rpx; 
}
.no-main .new{
  margin-top: 150rpx;
}
.no-main .new .n1{
  font-size: 34rpx;
  color: #333;
  margin-left: 40rpx;
}
.no-main .new .content{
  margin: 0 auto;
  text-align: center;
  margin-top: 30rpx; 
}
.no-main .new .content image{
  width: 330rpx;
  height: 232rpx;
  margin-bottom: 20rpx;
}
.no-main .new .content .text{
  font-size: 28rpx;
  color: #999;
}
.no-main .new .btn{
  margin: 40rpx;
} 
.no-main .new .btn button{ 
  width: 590rpx;
  height: 80rpx;
  color: #543115;
  font-size: 34rpx;
  margin-left: 40rpx;
  background: -webkit-linear-gradient(left,#ebd099,#e0be7c); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #ebd099, #e0be7c); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #ebd099, #e0be7c); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #ebd099 , #e0be7c); /* 标准的语法 */ 
}