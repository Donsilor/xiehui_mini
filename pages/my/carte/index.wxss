/* pages/my/carte/index.wxss */
.main{
  width: 750rpx;
  min-height: 1000rpx;
}
.main .my{
  /* width: 670rpx; */
  padding: 40rpx;  
}
.main .my .top{
  display: flex;
  justify-content: space-between;
}
.main .my .top :nth-child(1){
  font-size: 34rpx;
  color: #333;
}
.main .my .top :nth-child(2){
  font-size: 24rpx;
  color: #999;
}
.main .my .content{
  width: 610rpx;
  height: 296rpx;
  display: flex;  
  margin-top: 20rpx;  
  border: 1rpx solid #f5f5f5;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx #f5f5f5;
  padding: 30rpx 30rpx 0 30rpx;
}
.main .my .content .img{
  width: 145rpx;
  height: 145rpx;
  border-radius: 90rpx;
  box-shadow: 0 0 10rpx #f5f5f5;
}
.main .my .content .img image{
  width: 145rpx;
  height: 145rpx;
  border-radius: 90rpx;
}
.main .my .content .text{
  margin-left: 20rpx;
  line-height: 50rpx;
}
.main .my .content .text .t1{
  font-size: 30rpx;
  color: #333;
}
.main .my .content .text .t2{
  font-size: 24rpx;
  color: #653f01;
}
.main .my .btn{
  display: flex;
  margin-top: 20rpx; 
}
.main .my .btn button{  
  width: 314rpx;
  height: 80rpx;
  color: #543115;
  font-size: 34rpx;
  background: -webkit-linear-gradient(left,#ebd099,#e0be7c); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #ebd099, #e0be7c); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #ebd099, #e0be7c); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #ebd099 , #e0be7c); /* 标准的语法 */
}
.main .new{
  padding: 40rpx;
}
.main .new .n1{
  font-size: 34rpx;
  color: #333;
}
.main .new .newcontent{
  width: 610rpx;
  height: 200rpx;
  padding: 30rpx 30rpx 0 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx #f5f5f5;
  border: 1rpx solid #f5f5f5;
  margin-top: 20rpx;
  display: flex;
  position: relative;
}
.main .new .newcontent .img{
  width: 145rpx;
  height: 145rpx;
  border-radius: 90rpx;
  box-shadow: 0 0 10rpx #f5f5f5;
}
.main .new .newcontent .img image{
  width: 145rpx;
  height: 145rpx;
  border-radius: 90rpx;
}
.main .new .newcontent .text{
  margin-left: 20rpx;
  line-height: 50rpx;
}
.main .new .newcontent .text .t1{
  font-size: 30rpx;
  color: #333;
}
.main .new .newcontent .text .t2{
  font-size: 26rpx;
  color: #333;
}
.main .new .newcontent .text .t3{
  font-size: 26rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
}
.main .new .newcontent .text .t3 :nth-child(2){
  font-size: 26rpx;
  color: #bc875d;
  position: absolute;
  right: 20rpx;
}



