/* pages/my/comment/index.wxss */
.pages{padding: 0 30rpx;box-sizing: border-box}
.pages .box{margin-top: 40rpx;width: 690rpx;margin: 0 auto}
.pages .box .list{padding: 30rpx 0;box-sizing: border-box;border-bottom: 1rpx solid #f5f5f5}
.pages .box .list .left{width: 80rpx;height: 80rpx}
.pages .box .list .left image{width: 100%;height: 100%}
.pages .box .list .mid{width: 430rpx;margin: 0 20rpx}
.pages .box .list .mid .name{font-size: 30rpx;color: #333;font-weight: bold}
.pages .box .list .mid .text{font-size: 26rpx;color: #333;margin: 10rpx 0}
.pages .box .list .mid .time{font-size: 26rpx;color: #888;margin-top: 10rpx}
.pages .box .list .mid .time span{margin-right: 20rpx}
.pages .box .list .right{width: 134rpx;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 3;overflow: hidden;white-space: wrap;word-break: keep-all;word-wrap: break-word;font-size: 24rpx;line-height: 40rpx;color: #666}
.pages .box .list .right image{width: 100%;height: 100%}
.footer{position: fixed;left: 0;bottom: 0;width: 750rpx;height: 100rpx;border-top: 1rpx solid #f5f5f5;padding: 0 30rpx;box-sizing: border-box;background-color: #fff}
.footer .ipt{width: 560rpx;height: 70rpx;background-color: #f0f0f0;border-radius: 35rpx;padding-left: 30rpx;margin-top: 15rpx;font-size: 30rpx;color: #666}
.btn{height: 100rpx;line-height: 100rpx;font-size: 30rpx;color: #ffa800}
  /* 通用样式 */
.fl{float: left}
.fr{float: right}
.clf::after{display: block;content: '.';visibility: hidden;opacity: 0;clear: both;height: 0}